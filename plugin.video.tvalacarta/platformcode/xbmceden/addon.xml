<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.tvalacarta"
    name="tvalacarta"
    version="3.3.19"
    provider-name="tvalacarta">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="es">Televisión a la carta</summary>
    <description lang="es">Para ver la televisión por Internet, a la carta y desde tu media center</description>
    <summary lang="en">TV on demand (Spanish)</summary>
    <description lang="en">This plugin lets you watch inside XBMC full lenght episodes published on the TV channel websites.</description>
    <platform>all</platform>
  </extension>
  <extension point="xbmc.service" library="service_subscription.py" start="login|startup">
  </extension>
</addon>
